MERCADO_PAGO_ACCESS_TOKEN=
WEBHOOK_TOKEN_MERCADO_PAGO=
WEBHOOK_SECRET_MERCADO_PAGO=

# ==========================================
# Nginx / Certbot
# ==========================================
NGINX_URL=localhost
NGINX_SERVICE_UPSTREAM=backend
NGINX_EMAIL_CERTBOT=dev@example.com
DOMAIN=localhost
CERTBOT_EMAIL=dev@example.com

# ==========================================
# Cloudflare (Development)
# ==========================================
